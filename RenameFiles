def formatNames (filenames, separator):
    extras = []
    episodes = []

    for name in filenames:
        seasonepisode = re.findall("S\d\dE\d\d", name)
        season = re.findall("Season /d", name)
        filetype = name[name.rfind("."):]

        name = name.replace(filetype, "")

        sections = name.split(separator)
        unique = {}

        for section in sections:
            if len(section) == 1:
                continue

            if section not in unique:
                unique[section] = 1
            else:
                temp = unique[section]
                unique.update({section, temp + 1})

        for section in sections:
            if unique[section] > 2:


        if len(seasonepisode) != 0:
            newname = name.replace(seasonepisode[0], "")

        if len(season) != 0:
            name.replace(season[0], "")

        print (newname)

