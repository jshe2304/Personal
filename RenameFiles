def relocateExtras (filenames):
    try:
        os.mkdir(directory + "Extras")
    except:
        None

    for name in filenames:
        if "featurettes" in name.lower() or "deleted scenes" in name.lower():
            os.rename(directory + name, directory + "Extras\\" + name)

